{
  "manifest_version": 3,
  "name": "CodeAI Helper",
  "version": "1.0",
  "description": "Overlay coding hints on LeetCode.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "CodeAI Helper"
  }
}
